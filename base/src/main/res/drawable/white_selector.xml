    <!-- 按压状态 -->
    <item android:drawable="@color/black5" android:state_pressed="true" />

    <!-- 选中状态 -->
    <item android:drawable="@color/black5" android:state_selected="true" />

    <!-- 焦点状态 -->
    <item android:drawable="@color/black5" android:state_focused="true" />

